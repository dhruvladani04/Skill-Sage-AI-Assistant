{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": ["files"] },
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
